{
  "name": "vite-nuxt3",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.11.0",
  "scripts": {
    "build": "nuxi build",
    "dev:pwa": "VITE_PLUGIN_PWA=true nuxi dev",
    "serve": "nuxi dev --host",
    "generate": "nuxi generate",
    "preview": "NITRO_PORT=5123 node .output/server/index.mjs",
    "start": "nuxi build && NITRO_PORT=5123 node .output/server/index.mjs",
    "start:generate": "npx serve .output/public",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:ts": "vue-tsc --noEmit",
    "lint:css": "stylelint '**/*.{css,scss}' --fix",
    "postinstall": "nuxi prepare",
    "prepare": "npx simple-git-hooks"
  },
  "devDependencies": {
    "@element-plus/nuxt": "^1.1.2",
    "@iconify-json/carbon": "^1.2.8",
    "@iconify-json/twemoji": "^1.2.2",
    "@lincy/eslint-config": "^5.6.0",
    "@lincy/stylelint-config": "^2.1.0",
    "@lincy/unocss-base-config": "^2.2.1",
    "@lincy/utils": "^0.6.2",
    "@nuxt/kit": "^3.17.4",
    "@nuxtjs/color-mode": "^3.5.2",
    "@pinia/nuxt": "^0.11.0",
    "@types/md5": "^2.3.5",
    "@unocss/eslint-config": "^66.1.2",
    "@unocss/nuxt": "^66.1.2",
    "@vite-pwa/nuxt": "^1.0.1",
    "@vue-macros/nuxt": "^3.0.0-beta.10",
    "@vueuse/nuxt": "^13.3.0",
    "consola": "^3.4.2",
    "element-plus": "^2.9.11",
    "eslint": "^9.27.0",
    "eslint-plugin-format": "^1.0.1",
    "lint-staged": "^16.1.0",
    "md5": "^2.3.0",
    "nuxt": "^3.17.4",
    "pinia": "^3.0.2",
    "postcss-px-to-viewport-8-plugin": "^1.2.5",
    "sass": "^1.89.0",
    "simple-git-hooks": "^2.13.0",
    "stylelint": "^16.19.1",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vue-tsc": "^2.2.10"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "rollup"
      ]
    },
    "onlyBuiltDependencies": [
      "esbuild",
      "simple-git-hooks",
      "unrs-resolver",
      "vue-demi"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{[jt]s?(x),vue,md}": "eslint --fix",
    "*.{css,scss}": "stylelint --fix --allow-empty-input"
  }
}
