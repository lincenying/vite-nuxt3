{
  "name": "vite-nuxt3",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.15.3",
  "scripts": {
    "build": "nuxi build",
    "dev:pwa": "VITE_PLUGIN_PWA=true nuxi dev",
    "serve": "nuxi dev --host",
    "generate": "nuxi generate",
    "preview": "NITRO_PORT=5123 node .output/server/index.mjs",
    "start": "nuxi build && NITRO_PORT=5123 node .output/server/index.mjs",
    "start:generate": "npx serve .output/public",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:ts": "vue-tsc --noEmit",
    "lint:css": "stylelint '**/*.{css,scss}' --fix",
    "postinstall": "nuxi prepare",
    "prepare": "npx simple-git-hooks"
  },
  "devDependencies": {
    "@element-plus/nuxt": "^1.1.1",
    "@iconify-json/carbon": "^1.2.5",
    "@iconify-json/twemoji": "^1.2.2",
    "@lincy/eslint-config": "^5.4.0",
    "@lincy/stylelint-config": "^2.0.1",
    "@lincy/unocss-base-config": "^2.0.1",
    "@lincy/utils": "^0.6.1",
    "@nuxt/kit": "^3.15.1",
    "@nuxtjs/color-mode": "^3.5.2",
    "@pinia/nuxt": "^0.9.0",
    "@types/md5": "^2.3.5",
    "@unocss/eslint-config": "^65.4.0",
    "@unocss/nuxt": "^65.4.0",
    "@vite-pwa/nuxt": "^0.10.6",
    "@vue-macros/nuxt": "^1.12.13",
    "@vueuse/nuxt": "^12.4.0",
    "consola": "^3.3.3",
    "element-plus": "^2.9.3",
    "eslint": "^9.18.0",
    "eslint-plugin-format": "^1.0.1",
    "lint-staged": "^15.3.0",
    "md5": "^2.3.0",
    "nuxt": "^3.15.1",
    "pinia": "^2.3.0",
    "postcss-px-to-viewport-8-plugin": "^1.2.5",
    "sass": "^1.83.1",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.7.3",
    "vite": "^6.0.7",
    "vue-tsc": "^2.2.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "rollup"
      ]
    }
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{[jt]s?(x),vue,md}": "eslint --fix",
    "*.{css,scss}": "stylelint --fix --allow-empty-input"
  }
}
