{
  "name": "vite-nuxt3",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.14.0",
  "scripts": {
    "build": "nuxi build --analyze",
    "dev:pwa": "VITE_PLUGIN_PWA=true nuxi dev",
    "serve": "nuxi dev --host",
    "generate": "nuxi generate",
    "preview": "NITRO_PORT=5123 node .output/server/index.mjs",
    "start": "nuxi build && NITRO_PORT=5123 node .output/server/index.mjs",
    "start:generate": "npx serve .output/public",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:ts": "vue-tsc -b --noEmit",
    "lint:css": "stylelint '**/*.{css,scss}' --fix",
    "postinstall": "nuxi prepare",
    "prepare": "npx simple-git-hooks"
  },
  "dependencies": {
    "@lincy/async-validation": "^1.3.0",
    "@lincy/utils": "^0.6.6",
    "@nuxt/image": "^1.11.0",
    "@tato30/vue-pdf": "^1.11.4",
    "better-sqlite3": "^12.2.0",
    "element-plus": "^2.10.7",
    "md-editor-v3": "^5.8.4",
    "md5": "^2.3.0",
    "pinia": "^3.0.3",
    "store2": "^2.14.4"
  },
  "devDependencies": {
    "@element-plus/nuxt": "^1.1.4",
    "@iconify-json/carbon": "^1.2.13",
    "@iconify-json/twemoji": "^1.2.4",
    "@lincy/eslint-config": "^5.8.1",
    "@lincy/stylelint-config": "^2.2.0",
    "@lincy/unocss-base-config": "^2.3.0",
    "@nuxt/kit": "^4.0.3",
    "@nuxtjs/color-mode": "^3.5.2",
    "@pinia/nuxt": "^0.11.2",
    "@types/md5": "^2.3.5",
    "@types/mockjs": "^1.0.10",
    "@unocss/eslint-config": "^66.4.2",
    "@unocss/nuxt": "^66.4.2",
    "@vite-pwa/nuxt": "^1.0.4",
    "@vue-macros/nuxt": "3.0.0-beta.15",
    "@vueuse/nuxt": "^13.7.0",
    "consola": "^3.4.2",
    "eslint": "^9.33.0",
    "eslint-plugin-format": "^1.0.1",
    "lint-staged": "^16.1.5",
    "mockjs": "^1.1.0",
    "nuxt": "^4.0.3",
    "postcss-px-to-viewport-8-plugin": "^1.2.5",
    "sass": "^1.90.0",
    "simple-git-hooks": "^2.13.1",
    "stylelint": "^16.23.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.2",
    "vue-tsc": "^3.0.5"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "rollup"
      ]
    },
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "esbuild",
      "simple-git-hooks",
      "unrs-resolver",
      "vue-demi"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{[jt]s?(x),vue,md}": "eslint --fix",
    "*.{css,scss}": "stylelint --fix --allow-empty-input"
  }
}
