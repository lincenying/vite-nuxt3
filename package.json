{
  "name": "vite-nuxt3",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.14.2",
  "scripts": {
    "build": "nuxi build",
    "dev:pwa": "VITE_PLUGIN_PWA=true nuxi dev",
    "serve": "nuxi dev --host",
    "generate": "nuxi generate",
    "preview": "NITRO_PORT=5123 node .output/server/index.mjs",
    "start": "nuxi build && NITRO_PORT=5123 node .output/server/index.mjs",
    "start:generate": "npx serve .output/public",
    "lint": "eslint . --flag unstable_ts_config",
    "lint:fix": "eslint . --flag unstable_ts_config --fix",
    "lint:ts": "vue-tsc --noEmit",
    "lint:css": "stylelint '**/*.{css,scss}' --fix",
    "postinstall": "nuxi prepare",
    "prepare": "npx simple-git-hooks"
  },
  "devDependencies": {
    "@element-plus/nuxt": "^1.1.0",
    "@iconify-json/carbon": "^1.2.4",
    "@iconify-json/twemoji": "^1.2.1",
    "@lincy/base-config": "^1.3.3",
    "@lincy/eslint-config": "^5.3.0",
    "@lincy/stylelint-config": "^2.0.1",
    "@lincy/utils": "^0.6.1",
    "@nuxtjs/color-mode": "^3.5.2",
    "@pinia/nuxt": "^0.7.0",
    "@types/md5": "^2.3.5",
    "@unocss/eslint-config": "^0.64.1",
    "@unocss/nuxt": "^0.64.1",
    "@vite-pwa/nuxt": "^0.10.6",
    "@vue-macros/nuxt": "^1.12.9",
    "@vueuse/nuxt": "^11.3.0",
    "consola": "^3.2.3",
    "element-plus": "^2.8.8",
    "eslint": "^9.15.0",
    "eslint-plugin-format": "^0.1.2",
    "lint-staged": "^15.2.10",
    "md5": "^2.3.0",
    "nuxt": "^3.14.1592",
    "pinia": "^2.2.6",
    "postcss-px-to-viewport-8-plugin": "^1.2.5",
    "sass": "^1.81.0",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.6.3",
    "vite": "^5.4.11",
    "vue-tsc": "^2.1.10"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "rollup"
      ]
    }
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{[jt]s?(x),vue,md}": "eslint --flag unstable_ts_config --fix",
    "*.{css,scss}": "stylelint --fix --allow-empty-input"
  }
}
